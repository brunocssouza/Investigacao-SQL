generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model acessos {
  id             Int       @id
  funcionario_id Int?
  sala_id        Int?
  data           DateTime? @db.Date
  hora_entrada   DateTime? @db.Time(0)
  hora_saida     DateTime? @db.Time(0)
}

model depoimentos {
  id             Int       @id
  funcionario_id Int?
  relato         String?   @db.Text
  data           DateTime? @db.Date
  hora           DateTime? @db.Time(0)
}

model funcionarios {
  id    Int     @id
  cpf   String? @db.VarChar(14)
  nome  String? @db.VarChar(50)
  cargo String? @db.VarChar(50)
}

model movimentacoes {
  id             Int       @id
  obra_id        Int?
  sala_origem    Int?
  sala_destino   Int?
  data           DateTime? @db.Date
  hora           DateTime? @db.Time(0)
  responsavel_id Int?
  acao           String?   @db.VarChar(50)
}

model obras {
  id      Int     @id
  nome    String? @db.VarChar(100)
  tipo    String? @db.VarChar(50)
  sala_id Int?
}

model salas {
  id          Int     @id
  nome        String? @db.VarChar(50)
  localizacao String? @db.VarChar(50)
}
